datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  prompts   Prompt[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prompt {
  id          String   @id @default(uuid())
  genre       String
  prompt      String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}